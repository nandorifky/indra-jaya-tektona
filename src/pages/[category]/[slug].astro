---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// 1. Generate URL untuk semua produk yang ada di database
export async function getStaticPaths() {
  const products = await getCollection('products');
  
  return products.map(product => ({
    params: { 
      category: product.data.category, 
      slug: product.slug 
    },
    props: { product },
  }));
}

// 2. Ambil data produk dari props
const { product } = Astro.props;
const { Content } = await product.render(); // Render Markdown Body
const data = product.data;

// Format Rupiah (Jika nanti ada harga)
const formatPrice = (price) => {
    if (price === "Call for Price") return "Call for Price";
    return new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(price);
};

// Schema Markup Product (SEO)
const schemaProduct = {
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": data.name,
  "image": `https://indrajayatektona.com${data.image}`,
  "description": `Jual ${data.name} spesifikasi SNI/ASTM. ${data.specs.Standar || ''}`,
  "brand": {
    "@type": "Brand",
    "name": "Indra Jaya Tektona"
  },
  "offers": {
    "@type": "Offer",
    "url": `https://indrajayatektona.com/${data.category}/${product.slug}`,
    "priceCurrency": "IDR",
    "price": "0", // 0 for Call for Price
    "availability": "https://schema.org/InStock",
    "itemCondition": "https://schema.org/NewCondition"
  }
};
---

<Layout title={`Jual ${data.name} - Spesifikasi & Harga`} description={`Spesifikasi teknis ${data.name} untuk pengujian ${data.category.replace(/-/g, ' ')}. Standar SNI/ASTM. Garansi resmi & layanan purna jual.`}>
    
    <script type="application/ld+json" set:html={JSON.stringify(schemaProduct)} slot="head" />

    <div class="border-b border-ijt-dark bg-gray-50 py-3">
        <div class="max-w-7xl mx-auto px-6 text-xs font-mono font-bold uppercase tracking-widest text-gray-500">
            <a href="/" class="hover:text-ijt-gold">Home</a> 
            <span class="mx-2">/</span>
            <a href={`/${data.category}`} class="hover:text-ijt-gold">{data.category.replace(/-/g, ' ')}</a>
            <span class="mx-2">/</span>
            <span class="text-ijt-dark">{data.name}</span>
        </div>
    </div>

    <main class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid md:grid-cols-2 gap-12">
                
                <div class="space-y-6">
                    <div class="border-2 border-ijt-dark p-2 bg-white shadow-[8px_8px_0px_0px_rgba(31,33,36,1)]">
                        <div class="relative aspect-square overflow-hidden bg-gray-100">
                            <img 
                                src={data.image} 
                                alt={`Jual ${data.name}`} 
                                class="w-full h-full object-cover hover:scale-105 transition-transform duration-500 mix-blend-multiply"
                            />
                            {data.featured && (
                                <span class="absolute top-4 left-4 bg-ijt-gold text-ijt-dark text-xs font-black uppercase px-2 py-1 border border-ijt-dark">
                                    Best Seller
                                </span>
                            )}
                        </div>
                    </div>

                    <div class="grid grid-cols-3 gap-4 text-center">
                        <div class="border border-gray-200 p-3 bg-gray-50">
                            <div class="text-ijt-gold font-black text-lg">1 Th</div>
                            <div class="text-[10px] uppercase font-bold text-gray-500">Garansi</div>
                        </div>
                        <div class="border border-gray-200 p-3 bg-gray-50">
                            <div class="text-ijt-gold font-black text-lg">SNI</div>
                            <div class="text-[10px] uppercase font-bold text-gray-500">Standar</div>
                        </div>
                        <div class="border border-gray-200 p-3 bg-gray-50">
                            <div class="text-ijt-gold font-black text-lg">KAN</div>
                            <div class="text-[10px] uppercase font-bold text-gray-500">Kalibrasi</div>
                        </div>
                    </div>
                </div>

                <div>
                    <h1 class="text-3xl md:text-4xl font-black text-ijt-dark uppercase mb-2 leading-tight">{data.name}</h1>
                    <div class="h-1 w-20 bg-ijt-gold mb-6"></div>

                    {data.specs && (
                        <div class="bg-ijt-base border-l-4 border-ijt-dark p-6 mb-8">
                            <h3 class="font-bold text-sm uppercase tracking-widest mb-4 border-b border-gray-200 pb-2">Ringkasan Spesifikasi</h3>
                            <ul class="space-y-2 text-sm">
                                {Object.entries(data.specs).map(([key, value]) => (
                                    <li class="grid grid-cols-2">
                                        <span class="font-semibold text-gray-600">{key}</span>
                                        <span class="font-bold text-ijt-dark text-right">{value}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    )}

                    <div class="flex flex-col gap-4 mb-10">
                        <button class="btn-rfq w-full py-4 bg-ijt-dark text-white font-bold text-lg uppercase tracking-wide hover:bg-ijt-gold hover:text-ijt-dark transition-all border-2 border-transparent hover:border-ijt-dark shadow-[6px_6px_0px_0px_#C8A652] hover:shadow-none hover:translate-x-[3px] hover:translate-y-[3px]">
                            Minta Penawaran Harga
                        </button>
                        <a href="https://wa.me/6281234567890" target="_blank" class="w-full py-4 bg-white text-ijt-dark font-bold text-lg uppercase tracking-wide border-2 border-ijt-dark hover:bg-gray-50 transition-all text-center flex justify-center items-center gap-2">
